<div class="header">
  <div class="header-top">
    <% unless @current_user.present? %>
      <div class="header-top__box">
        <a>Đăng nhập</a>
        <div class="header-top__box__border">|</div>
        <a>Đăng ký</a>
      </div>
    <% else %>
      <div class="header-top__box">
        <%= link_to "logout", logout_path(@current_user), method: :delete %>
      </div>
    <% end %>
  </div>
  <div class="header-bottom">
    <div class="header-bottom__box">
      <img class="logo" src="https://www.betacinemas.vn/Assets/Common/logo/logo.png" alt="logo"/>
      <ul class="nav-menu">
        <li class="nav-item"><a>Lịch Chiếu Phim</a></li>
        <li class="nav-item"><a><%= link_to "Phim", users_movies_path %></a></li>
        <li class="nav-item"><a>Giá Vé</a></li>
        <li class="nav-item"><a>Tin mới và ưu đãi</a></li>
      </ul>
    </div>
  </div>
</div>
